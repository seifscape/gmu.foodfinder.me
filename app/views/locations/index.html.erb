<%- model_class = Location -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= "AKA" %></th>
      <th><%= model_class.human_attribute_name(:campus) %></th>
      <th><%= model_class.human_attribute_name(:building) %></th>
    </tr>
  </thead>
  <tbody>
    <% @open_locations.each do |location| %>
      <tr>
       	<!--<td> # link_to location.id, location_path(location) </td>-->
        <td><%= location.name %></td>
        <td><%= location.aka %></td>
        <td><%= location.campus %></td>
        <td><%= location.building %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>It is currently <%= @current_time_as_string %> at GMU</p>
